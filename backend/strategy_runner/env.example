# Strategy Runner Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trademanthan
DB_USER=trademanthan
DB_PASSWORD=trademanthan123
DATABASE_URL=postgresql://trademanthan:trademanthan123@localhost/trademanthan

# API Configuration
API_BASE_URL=https://trademanthan.in
API_TIMEOUT=30
API_MAX_RETRIES=3
API_RETRY_DELAY=1.0

# Trading Configuration
DEFAULT_TIMEFRAME=5m
MAX_POSITION_SIZE=1000.0
DEFAULT_STOP_LOSS=0.02
DEFAULT_TAKE_PROFIT=0.04
MAX_SLIPPAGE=0.001
MIN_VOLUME=100.0
MAX_SPREAD=0.005

# Risk Management
MAX_DAILY_LOSS=0.05
MAX_PORTFOLIO_RISK=0.02
POSITION_SIZING_METHOD=fixed
CORRELATION_THRESHOLD=0.7
MAX_CONCURRENT_POSITIONS=5

# Strategy Configuration
MIN_SIGNAL_CONFIDENCE=0.6
MIN_SIGNAL_STRENGTH=0.5
MAX_FALSE_SIGNALS=3

# Execution Configuration
EXECUTION_MODE=paper
ORDER_TYPE=LIMIT
FILL_STRATEGY=aggressive
MAX_ORDER_RETRIES=3
ORDER_TIMEOUT=60
PARTIAL_FILL_THRESHOLD=0.8

# Logging Configuration
LOG_LEVEL=INFO
LOG_MAX_BYTES=5000000
LOG_BACKUP_COUNT=5
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# Performance Configuration
MAX_EXECUTION_TIME=30.0
MEMORY_LIMIT=512
CPU_LIMIT=0.8
ENABLE_PROFILING=false

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=60
METRICS_COLLECTION_INTERVAL=300
MAX_MEMORY_USAGE=0.9
MAX_CPU_USAGE=0.9
MAX_LATENCY=5.0
MAX_ERROR_RATE=0.05

# Backtesting Configuration
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-12-31
BACKTEST_INITIAL_CAPITAL=100000.0
BACKTEST_COMMISSION_RATE=0.001
BACKTEST_SLIPPAGE_MODEL=fixed
BACKTEST_DATA_SOURCE=local
BACKTEST_RESAMPLE_FREQUENCY=1min

# Notification Configuration
ENABLE_NOTIFICATIONS=true
NOTIFICATION_CHANNELS=email,slack
NOTIFICATION_FREQUENCY=immediate

# Security Configuration
API_KEY_ENCRYPTION=true
ENCRYPTION_KEY=your-encryption-key-here
RATE_LIMITING_ENABLED=true
MAX_REQUESTS_PER_MINUTE=100
MAX_REQUESTS_PER_HOUR=1000
IP_WHITELIST=

# Development Configuration
DEBUG_MODE=false
ENABLE_HOT_RELOAD=false
MOCK_DATA=false
TEST_MODE=false

# Notification Service Credentials (Optional)
ALERT_EMAIL=admin@trademanthan.in
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Delta Exchange API Credentials (for live trading)
DELTA_API_KEY=your-delta-api-key
DELTA_API_SECRET=your-delta-api-secret
DELTA_BASE_URL=https://api.delta.exchange

# Risk Management Alerts
RISK_ALERT_EMAIL=risk@trademanthan.in
DAILY_REPORT_EMAIL=reports@trademanthan.in
EMERGENCY_CONTACT=emergency@trademanthan.in
